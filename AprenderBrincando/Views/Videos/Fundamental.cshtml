@model IEnumerable<AprenderBrincando.Models.Video>

@{
    ViewData["Title"] = "EnsFundamental Page";
}

<div id="categoria-area">
    <div class="container conteudo mb-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center" style="margin-top: 130px;">
                <h2 class=" display-3 luckiest mb-4" style="color: #002147;">ENSINO FUNDAMENTAL</h2>
            </div>

            <ul class="nav nav-tabs custom-tab" id="myTabs">
                <li class="nav-item">
                    <a class="nav-link active" id="tab1-tab" data-bs-toggle="tab" href="#tab1">Português</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2">Matemática</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab3-tab" data-bs-toggle="tab" href="#tab3">Ciência</a>
                </li>
            </ul>

            <div class="tab-content mt-2">

                @* Aba 1 - Português *@
                <div class="tab-pane fade show active" id="tab1">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            @if (item.Subcategoria == "1")
                            {
                                <div class="col-md-4 ">
                                    <div class="card h-100, w-100 ">
                                        <iframe width="100%" height="300" src="@item.Link" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>                            <div class="card-body">
                                            <h5 class="card-title">Português</h5>
                                            <p class="card-text">@item.Descricao</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

                @* Aba 2 - Matemática *@
                <div class="tab-pane fade" id="tab2">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            @if (item.Subcategoria == "2")
                            {
                                <div class="col-md-4 ">
                                    <div class="card h-100, w-100 ">
                                        <iframe width="100%" height="300" src="@item.Link" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>                            <div class="card-body">
                                            <h5 class="card-title">Matemática</h5>
                                            <p class="card-text">@item.Descricao</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

                @* Aba 3 - Ciência *@
                <div class="tab-pane fade" id="tab3">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            @if (item.Subcategoria == "3")
                            {
                                <div class="col-md-4 ">
                                    <div class="card h-100, w-100 ">
                                        <iframe width="100%" height="300" src="@item.Link" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>                            <div class="card-body">
                                            <h5 class="card-title">Ciência</h5>
                                            <p class="card-text">@item.Descricao</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


